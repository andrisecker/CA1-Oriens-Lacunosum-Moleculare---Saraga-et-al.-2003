<?xml version="1.0" encoding="UTF-8"?>
<neuroml xmlns="http://www.neuroml.org/schema/neuroml2" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://www.neuroml.org/schema/neuroml2  https://raw.github.com/NeuroML/NeuroML2/development/Schemas/NeuroML2/NeuroML_v2beta2.xsd" 
         id="olm1">
    
    <Include file="../Nasoma.channel.nml"/>
    <Include file="../Ksoma.channel.nml"/>
    <Include file="../IA.channel.nml"/>
    <Include file="../Ih.channel.nml"/>

<!-- Additional leak conductance (in the original version Nasoma contains it)--> 

    <ionChannelHH id="leak" conductance="0.05nS" species="non_specific"/>
    
<!-- Cellular properties -->

    <cell id="olm1">

        <morphology id="just_a_cylinder">

            <segment id="0" name="Soma">
                <proximal x="0.0" y="0.0" z="0.0" diameter="10.0"/>
                <distal x="0.0" y="0.0" z="3.1831" diameter="10.0"/>
            </segment>

            <segmentGroup id="soma_group">
                <member segment="0"/>
            </segmentGroup>

        </morphology>


        <biophysicalProperties id="biophys">

            <membraneProperties>
                <channelDensity condDensity="0.05mS_per_cm2" id="passive" ionChannel="leak" erev="-70 mV" ion="non_specific"/>
                <!-- 1 pS_per_um2 = 0.1 mS_per_cm2 -->
                <channelDensity condDensity="10.7mS_per_cm2" id="Nasoma" ionChannel="Nasoma" erev="90.0 mV" ion="na"/> <!-- 10.7 -->
                <channelDensity condDensity="31.9mS_per_cm2" id="Ksoma" ionChannel="Ksoma" erev="-100.0 mV" ion="k"/> <!-- 31.9 -->
                <channelDensity condDensity="16.5mS_per_cm2" id="IA" ionChannel="IA" erev="-100.0 mV" ion="k"/> <!-- 16.5 -->
                <channelDensity condDensity="1.358mS_per_cm2" id="Ih" ionChannel="Ih" erev="-32.9 mV" ion="h"/> <!-- 1.358 -->
                
                <spikeThresh value="0 mV"/>
                <specificCapacitance value="1.3 uF_per_cm2"/>
                <initMembPotential value="-70.0 mV"/>

            </membraneProperties>

            <intracellularProperties>

                <resistivity value="150 ohm_cm"/>

            </intracellularProperties>

        </biophysicalProperties>

    </cell>

<!-- Point process: Current clamp -->
     
    <pulseGenerator id="IClamp" delay="100ms" duration="200ms" amplitude="20pA" />

<!-- Create a single-cell network -->

    <network id="net1" type="networkWithTemperature" temperature = "24 degC">
        <population id="pop" component="olm1" type="populationList" size="1">
            <instance id="0">
                <location x="0" y="0" z="0"/>
            </instance>
        </population>

        <inputList id="IClamp" component="IClamp" population="pop">
            <input id="0" target="../pop/0/olm1" destination="synapses"/>
        </inputList>

    </network>

</neuroml>
